<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    {% assign time_format = '%a, %d %b %Y %H:%M:%S %z' %}
    <title>{{ site.name }}</title>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <description>{{ site.description }}</description>
    <language>en-us</language>
    <pubDate>{{ site.time | date: time_format }}</pubDate>
    <lastBuildDate>{{ site.time | date: time_format }}</lastBuildDate>
    {% for post in site.posts limit:20 %}
      {% if post.layout == "post" %}
      <item>
        <title>{{ post.h1 }}</title>
        <link>{{ site.url }}{{ post.id }}</link>
        <pubDate>{{ post.date | date: time_format }}</pubDate>
        <guid isPermaLink="true">{{ site.url }}{{ post.id }}</guid>
        <description>{{
          post.content
            | replace: '="//', '="http//'
            | replace: 'href="#', 'href="__SITE_URL____POST_ID__#'
            | replace: 'href="/', 'href="__SITE_URL__/'
            | replace: 'src="/', 'src="__SITE_URL__/'
            | replace: '__SITE_URL__',site.url
            | replace: '__POST_ID__',post.id
            | replace: '="http//', '="//'
            | xml_escape
        }}</description>
      </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>
